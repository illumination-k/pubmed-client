{
  "permissions": {
    "deny": [
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Bash(git commit*--no-verify*)",
      "Bash(git commit*-n *)",
      "Write(**/human_verified/**)",
      "Write(.env*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "pre-commit run && mise run fmt && mise run lint; exit $(( $? ? 2 : 0 ))"
          }
        ]
      }
    ]
  }
}
