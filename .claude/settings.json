{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "MISE_ENV": "root,rust,python,node"
  },
  "allow": [
    "Skill",
    "WebSearch",
    "WebFetch"
  ],
  "permissions": {
    "deny": [
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Write(**/human_verified/**)",
      "Write(.env*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/session-start.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/stop.sh"
          }
        ]
      }
    ]
  }
}
