{
  "permissions": {
    "deny": [
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Write(**/human_verified/**)",
      "Write(.env*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/etc/setup-claude-web.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "mise run fmt && mise run lint; exit $(( $? ? 2 : 0 ))"
          }
        ]
      }
    ]
  }
}
