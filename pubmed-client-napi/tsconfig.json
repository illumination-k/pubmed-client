{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "types": ["vitest/globals", "node"]
  },
  "include": ["examples/**/*.ts", "tests/**/*.ts", "vitest.config.ts"],
  "exclude": ["node_modules"]
}
