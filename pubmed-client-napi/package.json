{
  "name": "pubmed-client",
  "version": "0.1.0",
  "description": "Node.js native bindings for PubMed/PMC API client",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/illumination-k/pubmed-client-rs"
  },
  "license": "MIT",
  "keywords": [
    "pubmed",
    "pmc",
    "ncbi",
    "bioinformatics",
    "api-client",
    "napi-rs"
  ],
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "napi": {
    "name": "pubmed-client",
    "triples": {
      "defaults": true,
      "additional": [
        "x86_64-unknown-linux-musl",
        "aarch64-unknown-linux-gnu",
        "aarch64-apple-darwin",
        "aarch64-unknown-linux-musl"
      ]
    }
  },
  "engines": {
    "node": ">= 16"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "ci": "biome ci .",
    "universal": "napi universal",
    "version": "napi version",
    "example": "npx ts-node examples/basic.ts",
    "example:search": "npx ts-node examples/search-and-markdown.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@napi-rs/cli": "^2.18.4",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.0",
    "vitest": "^2.1.8"
  }
}
