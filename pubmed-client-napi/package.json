{
  "name": "pubmed-client",
  "version": "0.1.2",
  "description": "Node.js native bindings for PubMed/PMC API client",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/illumination-k/pubmed-client.git",
    "directory": "pubmed-client-napi"
  },
  "publishConfig": {
    "provenance": true,
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "license": "MIT",
  "keywords": [
    "pubmed",
    "pmc",
    "ncbi",
    "bioinformatics",
    "api-client",
    "napi-rs"
  ],
  "files": [
    "index.js",
    "index.d.ts",
    "npm"
  ],
  "napi": {
    "binaryName": "pubmed-client",
    "targets": [
      "x86_64-apple-darwin",
      "x86_64-pc-windows-msvc",
      "x86_64-unknown-linux-gnu",
      "x86_64-unknown-linux-musl",
      "aarch64-apple-darwin",
      "aarch64-unknown-linux-gnu",
      "aarch64-unknown-linux-musl"
    ]
  },
  "engines": {
    "node": ">= 20"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --platform --release --esm",
    "build:debug": "napi build --platform --esm",
    "prepublishOnly": "napi prepublish -t npm",
    "create-npm-dirs": "napi create-npm-dirs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "ci": "pnpm run lint",
    "universal": "napi universal",
    "version": "napi version",
    "example": "npx ts-node examples/basic.ts",
    "example:search": "npx ts-node examples/search-and-markdown.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@napi-rs/cli": "^3.5.1",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.0",
    "vitest": "^2.1.8"
  },
  "optionalDependencies": {
    "pubmed-client-darwin-x64": "0.1.2",
    "pubmed-client-win32-x64-msvc": "0.1.2",
    "pubmed-client-linux-x64-gnu": "0.1.2",
    "pubmed-client-linux-x64-musl": "0.1.2",
    "pubmed-client-darwin-arm64": "0.1.2",
    "pubmed-client-linux-arm64-gnu": "0.1.2",
    "pubmed-client-linux-arm64-musl": "0.1.2"
  }
}
